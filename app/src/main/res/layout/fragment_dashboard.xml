<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAP BACKGROUND -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- DARK OVERLAY agar UI lebih kontras -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000" />

    <!-- CAMERA PREVIEW BUNDLED DENGAN FRAME LINGKARAN -->
    <FrameLayout
        android:id="@+id/cameraCircle"
        android:layout_width="251dp"
        android:layout_height="251dp"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:layout_marginBottom="100dp"
        android:outlineProvider="background"
        android:background="@drawable/bg_camera_circle"
        android:elevation="8dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <!-- CAMERA ICON Overlay -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/white" />

    <!-- BOTTOM ACTION (Tombol ABSEN) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:padding="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAbsen"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ABSEN SEKARANG"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/teal_200"
            android:textColor="@android:color/white"
            android:enabled="false" />
    </LinearLayout>

</FrameLayout>
