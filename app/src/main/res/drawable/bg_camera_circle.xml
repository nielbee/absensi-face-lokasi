<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Fill transparan agar preview CameraX terlihat -->
    <solid android:color="#33000000" />

    <!-- Border putih tipis -->
    <stroke
        android:width="4dp"
        android:color="@android:color/white" />

    <!-- Shadow / elevation effect -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

</shape>
